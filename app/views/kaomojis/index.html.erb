<%= paginate @kaomojis %>

<table>
  <tbody>
    <% @kaomojis.each_slice(40) do |kaomojis| %>
      <tr>
        <% kaomojis.each do |kaomoji| %>
          <td class='<%= kaomoji.selected ? 'selected' : '' %>'' id='<%= kaomoji.id %>'>
            <%= link_to kaomoji.kaomoji.gsub("\n", "<br>").html_safe, kaomoji_select_path(kaomoji.id), method: :put, remote: true, format: :js %>
        <% end %>
    <% end %>
